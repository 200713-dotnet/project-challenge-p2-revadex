@model StarDex.Client.Models.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<section>
  @using (Html.BeginForm("Clicked", "Home", FormMethod.Post)) {
    <span class="const-container">
      <img src="~/img/23614032.jpg" alt="Northern Hemisphere" class="constellation" id="constellation-sphere">
      @foreach (StarDex.Client.Models.ConstellationButtonModel constellation in Model.north) {
        <input type="submit" name="N" value="N" class="btn" style="top: 50%; left: 50%;">
      }
    </span>
    <span class="const-container">
      <img src="~/img/23614029.jpg" alt="Southern Hemisphere" class="constellation" id="constellation-sphere">
      @foreach (StarDex.Client.Models.ConstellationButtonModel constellation in Model.north) {
        <input type="submit" name="S" value="S" class="btn" style="top: 50%; left: 50%;">
      }
    </span>
  }
</section>